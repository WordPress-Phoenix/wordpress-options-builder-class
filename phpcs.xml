<?xml version="1.0"?>
<ruleset name="wpphx">
    <description>Code standard for the WordPress VIP</description>

    <exclude-pattern>tests/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>unminified-assets-v3/*</exclude-pattern>

    <rule ref="WordPress-VIP">
        <exclude name="WordPress.VIP.SuperGlobalInputUsage"/>
        <exclude name="WordPress.VIP.RestrictedFunctions.switch_to_blog"/>
    </rule>
    <rule ref="WordPress-Core"></rule>
    <rule ref="WordPress"></rule>

	<file>.</file>
</ruleset>
